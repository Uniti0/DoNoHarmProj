<Window x:Class="DoNoHarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoNoHarm"
        mc:Ignorable="d"
        Background="{DynamicResource MainWhiteBrush}"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="360*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>

        <Frame Grid.Column="1" Grid.Row="1">
            
        </Frame>

        <Border Grid.Row="1">
            <StackPanel>
                <RadioButton Margin="0 -1 0 0" GroupName="Navigation" Content="Услуги" />
                <RadioButton Margin="0 -1 0 0" GroupName="Navigation" Content="Клиенты" />
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
