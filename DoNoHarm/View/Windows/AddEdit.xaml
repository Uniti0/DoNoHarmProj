<Window x:Class="DoNoHarm.View.Windows.AddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoNoHarm.View.Windows"
        mc:Ignorable="d"
        Title="AddEdit" Height="400" Width="340"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label Style="{StaticResource BlackLabel}" Content="{Binding Title}" HorizontalAlignment="Center" FontSize="25" Margin="0 0 0 20"/>
            <Label Style="{StaticResource BlackLabel}" Content="Наименование"/>
            <TextBox Style="{StaticResource TextBoxMain}" Text="{Binding Name}"/>
            <Label Style="{StaticResource BlackLabel}" Content="Код"/>
            <TextBox Style="{StaticResource TextBoxMain}" Text="{Binding Code}"/>
            <Label Style="{StaticResource BlackLabel}" Content="Цена"/>
            <TextBox Style="{StaticResource TextBoxMain}" Text="{Binding Price}"/>
            <Button Style="{StaticResource ButtonLogin}" Command="{Binding AddEditNewService}" Content="Создать" Margin="10" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
