<Window x:Class="DoNoHarm.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoNoHarm.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Авторизация" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" FontSize="20"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="35" Width="250" Margin="0 0 0 30" Content="Вход" Command="{Binding Authorizate}"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Margin="0 0 0 30">
            <Label Content="Логин" FontSize="15"/>
            <TextBox FontSize="20"/>
            <Label Content="Пароль" FontSize="15"/>
            <TextBox FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
